@model Category

<h1 class="text-center">
	Delete Category
</h1>

<form method="post" enctype="multipart/form-data">
	<div class="mb-3">
		<label asp-for="Name"></label>
		<input type="text" disabled asp-for="Name" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="Discount"></label>
		<input type="text" disabled asp-for="Discount" class="form-control" />
	</div>
	<div class="mb-3">
		<input type="file" disabled name="file" asp-for="Discount" class="form-control" />
	</div>
	<div class="mb-3">
		<img src="@Model.ImageUrl" style="width:100px"/>
	</div>
	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Delete</button>
	</div>
</form>