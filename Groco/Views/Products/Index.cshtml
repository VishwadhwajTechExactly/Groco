@model List<Product>

<h1 class="text-center">Product List</h1>

<div class="wrapper">
	<div class="mb-3">
		<a asp-controller="Products" asp-action="Create" class="btn btn-primary">Create Product</a>
	</div>

	<div class="container">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						Price
					</th>
					<th>
						Rating
					</th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>
							@Model[i].Name
						</td>
						<td>
							@Model[i].Price
						</td>
						<td>
							@Model[i].Rating
						</td>
						<td style="width:20px">
							<a asp-controller="Products" asp-action="Edit" asp-route-id="@Model[i].ProductId" class="btn btn-primary">Edit</a>
						</td>
						<td style="width:20px">
							<a asp-controller="Products" asp-action="Delete" asp-route-id="@Model[i].ProductId" class="btn btn-primary">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
