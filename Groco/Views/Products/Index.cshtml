@model List<Product>

<h1 class="text-center">Product List</h1>

<div>
	<a asp-controller="Products" asp-action="Create">Create Product</a>
</div>

<div class="container">
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Price
				</th>
				<th>
					Rating
				</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>
						@Model[i].Name
					</td>
					<td>
						@Model[i].Price
					</td>
					<td>
						@Model[i].Rating
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
