@using Groco.ViewModels
@model ProductViewModel

<h1 class="text-center" style="margin:100px">Delete Product</h1>

<form method="post" enctype="multipart/form-data">
	<div style="margin:20px">
		<label asp-for="Product.Name"></label>
		<input type="text" disabled asp-for="Product.Name" />
		
	</div>
	<div style="margin:20px">
		<label asp-for="Product.Price"></label>
		<input type="text" disabled asp-for="Product.Price" />
	</div>
	<div style="margin:20px">
		<label asp-for="Product.Rating"></label>
		<input type="text" disabled asp-for="Product.Rating" />
	</div>
	<div style="margin:20px">
		<select disabled asp-for="Product.Category" asp-items="@Model.CategoryList">
			<option selected disabled>--select category--</option>
		</select>
	</div>
	<div style="margin:20px">
		<img src="@Model.Product.ImageUrl" style="width:100px" />
	</div>
	<div style="margin:20px">
		<input type="file" disabled name="file" asp-for="Product.ImageUrl" />
	</div>
	<div style="margin:20px">
		<button type="submit" class="btn btn-primary">Delete</button>
	</div>
</form>
