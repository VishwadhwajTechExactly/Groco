@using Groco.ViewModels
@model ProductViewModel

<h1 class="text-center">Delete Product</h1>

<form method="post" enctype="multipart/form-data">
	<div class="mb-3">
		<label asp-for="Product.Name"></label>
		<input type="text" disabled asp-for="Product.Name" class="form-control" />
		
	</div>
	<div class="mb-3">
		<label asp-for="Product.Price"></label>
		<input type="text" disabled asp-for="Product.Price" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="Product.Rating"></label>
		<input type="text" disabled asp-for="Product.Rating" class="form-control" />
	</div>
	<div class="mb-3">
		<select disabled asp-for="Product.Category" asp-items="@Model.CategoryList" class="form-select">
			<option selected disabled>--select category--</option>
		</select>
	</div>
	<div class="mb-3">
		<img src="@Model.Product.ImageUrl" style="width:100px" />
	</div>
	<div class="mb-3">
		<input type="file" disabled name="file" asp-for="Product.ImageUrl" class="form-control" />
	</div>
	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Delete</button>
	</div>
</form>
